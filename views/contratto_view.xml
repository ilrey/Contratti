<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="view_contratti_contratto_tree" model="ir.ui.view">
		<field name="name">contratti.contratto.tree</field>
		<field name="model">contratti.contratto</field>
		<field name="arch" type="xml">
			<tree>
				<field name="Con_CognomeClienteContratto"/>
				<field name="Con_NomeCliente"/>
				<field name="Con_Cellulare"/>
				<field name="Con_Email"/>
				<field name="user_id" string="Agente"/>
			</tree>
		</field>
	</record>

	
	<record id="view_contratti_contratto_graph" model="ir.ui.view">
		<field name="name">contratti.contratto.tree</field>
		<field name="model">contratti.contratto</field>
		<field name="arch" type="xml">
			<graph>
				<field name="user_id" string="Agente"/>
			</graph>
		</field>
	</record>

	
	<record id="view_contratti_contratto_search" model="ir.ui.view">
		<field name="name">contratti.contratto.search</field>
		<field name="model">contratti.contratto</field>
		<field name="arch" type="xml">
			<search>
				<field name="Con_CognomeClienteContratto"/>
				<field name="Con_NomeCliente"/>
				<field name="Con_CodFiscaleCliente"/>
			</search>
		</field>
	</record>


	<record id="view_contratti_contratto_form" model="ir.ui.view">
		<field name="name">contratti.contratto.form</field>
		<field name="model">contratti.contratto</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<p>
						<b>Dati del Cliente</b>
					</p>
					<group>
						<group>
							<group>
								<field name="Con_CognomeClienteContratto" required="1"/>
								<field name="Con_NomeCliente" required="1"/>
								<field name="Con_CodFiscaleCliente" required="1"/>
							</group>
							<group>
								<field name="Con_TipoDocumento" string="Tipo Documento" required="1"/>
								<field name="Con_Numero" required="1"/>
								<field name="Con_RilasciatoDa" required="1"/>
								<field name="Con_DataRilascio" required="1"/>
							</group>
							<group>
								<field name="Con_Telefono"/>
								<field name="Con_Cellulare" required="1"/>
								<field name="Con_Email" required="1"/>
								<field name="Con_Pec"/>
							</group>
						</group>
						<group>
							<b>Indirizzo di Residenza</b>
							<field name="Con_Indirizzo"/>
							<field name="Con_Civico"/>
							<field name="Con_Scala"/>
							<field name="Con_Interno"/>
							<field name="Con_Citta"/>
							<field name="active" invisible="1"/>
							<field name="user_id" string="Agente"/>
						</group>
					</group>
					<notebook>
						<page string="Documento cliente">
							<button name="open_file_upload" type="object" string="Carica/Visualizza Documento"></button>
						</page>
						<page string="Contratto">
							<button name="open_file_upload" type="object" string="Carica/Visualizza Contratto"></button>
						</page>
						<page string="Note">
							<field name="Con_Note"/>
						</page>
					</notebook>
				</sheet>
			</form>
		</field>
	</record>


	<record id="action_contratti_contratto" model="ir.actions.act_window">
		<field name="name">Contratti</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">contratti.contratto</field>
		<field name="view_mode">tree,form,graph</field>
		<field name="context">{}</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
				Inserisci il tuo primo contratto!
			</p>
		</field>
	</record>

</odoo>